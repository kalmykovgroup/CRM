<Window x:Class="KTSF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KTSF"
        mc:Ignorable="d"
         xmlns:gif="http://wpfanimatedgif.codeplex.com"  
        Title="KTSF" Width="1000" Height="600" WindowStartupLocation="CenterScreen" d:DesignHeight="300" d:DesignWidth="700">
    <Grid>
        <ContentControl Content="{Binding UserControl}"/>


        <Image Panel.ZIndex="2" gif:ImageBehavior.AnimatedSource="/Img/loading.gif" d:Source="/Img/loading.gif" Margin="0 -30 0 0" Width="100">
            <Image.Style>
                <Style TargetType="Image">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoad}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>

        <TextBlock Text="{Binding IsLoad}" d:Text="Load" HorizontalAlignment="Center" FontSize="17" VerticalAlignment="Center"/>

    </Grid>
</Window>
