<UserControl x:Class="KTSF.Components.MainMenuComponent.Components.WarehousePageComponent.Components.AcceptancePoductsPageComponent.AcceptancePoductsPageUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KTSF.Components.MainMenuComponent.Components.WarehousePageComponent.Components.AcceptancePoductsPageComponent"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Прием товаров"></TextBlock>
            <Button Content="Добавить товар" Command="{Binding AddProductClickCommand}" Width="300"/>
            <Button Content="Загрузить накладную" Command="{Binding UploadTheInvoiceClickCommand}" Width="300"/>
        </StackPanel>
    </Grid>
</UserControl>
