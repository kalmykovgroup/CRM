<UserControl x:Class="KTSF.Components.CommonComponent.SearchComponent.SearchUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KTSF.Components.CommonComponent.SearchComponent"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Height="50" Background="White">

        <Grid>
            <TextBlock Text="Search" VerticalAlignment="Center" Margin="20 0 0 0" Foreground="gray" FontSize="17"/>
            <TextBox Text="{Binding Search}" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="17"  Padding="0 0 50 0"/>
            <Button HorizontalAlignment="Right" Width="50" Command="{Binding SearchClickCommand}">
                <Button.Template>
                    <ControlTemplate>
                        <Image Source="img/search.png" Width="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
        
    </Border>
</UserControl>
