<UserControl
    x:Class="KTSF.Components.Windows.MainMenuComponent.MainMenuWinUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:KTSF.Components"
    xmlns:converters="clr-namespace:KTSF.Components.Windows.MainMenuWinComponent.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:language="clr-namespace:KTSF.Core.Language"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    x:Name="This"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#fff"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:QualsComponentUserVMToBoolConverter x:Key="QualsComponentUserVMToBoolConverter" />
    </UserControl.Resources>
    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Left">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    x:Name="MenuGrid"
                    Grid.Row="1"
                    Width="200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Margin="5,0,5,0"
                        BorderBrush="#21303D"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>


                            <ItemsControl
                                Grid.Row="0"
                                Margin="0"
                                HorizontalContentAlignment="Stretch"
                                d:ItemsSource="{d:SampleData ItemCount=4}"
                                ItemsSource="{Binding LeftNavigationBar}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding ShowCommand}" Content="{Binding IconPath}">
                                            <Button.Template>
                                                <ControlTemplate>
                                                    <Border
                                                        Height="36"
                                                        Margin="2,2,2,2"
                                                        d:DataContext="{d:DesignInstance components:Component}"
                                                        BorderBrush="#21303D"
                                                        BorderThickness="0"
                                                        CornerRadius="5">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>

                                                            <svgc:SvgViewbox
                                                                Width="26"
                                                                Height="26"
                                                                Margin="4"
                                                                Source="{Binding IconPath}" />

                                                            <TextBlock
                                                                Grid.Column="1"
                                                                Margin="3,0,0,0"
                                                                VerticalAlignment="Center"
                                                                d:Text="Nav"
                                                                Text="{Binding Property.Name}" />
                                                        </Grid>

                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#A6C8E5" />
                                                                    </Trigger>
                                                                    <DataTrigger Value="True">
                                                                        <DataTrigger.Binding>
                                                                            <MultiBinding Converter="{StaticResource QualsComponentUserVMToBoolConverter}">
                                                                                <Binding />
                                                                                <Binding
                                                                                    d:ElementName=""
                                                                                    d:Path=""
                                                                                    ElementName="This"
                                                                                    Path="DataContext.CurrentFrame.UserControl" />
                                                                            </MultiBinding>
                                                                        </DataTrigger.Binding>
                                                                        <Setter Property="Background" Value="#637FA0" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>

                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </Grid>
                    </Border>

                    <Border
                        Grid.Row="1"
                        Margin="5"
                        BorderBrush="#21303D"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Grid Margin="0,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Height="40">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <svgc:SvgViewbox
                                    Width="26"
                                    Height="26"
                                    Margin="-6,0,0,0"
                                    Source="/Img/TabComponents/HistoryIcon.svg" />


                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="История" />
                            </Grid>

                            <ScrollViewer Grid.Row="3" >
                                <ItemsControl
                                    HorizontalContentAlignment="Stretch"
                                    d:ItemsSource="{d:SampleData ItemCount=14}"
                                    ItemsSource="{x:Static components:Component.History}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button>
                                                <Button.Template>
                                                    <ControlTemplate>
                                                        <Border
                                                            Padding="10,5"
                                                            BorderBrush="#21303D"
                                                            BorderThickness="0,0,0,0.5">
                                                            <TextBlock
                                                                Margin="10,0,0,0"
                                                                VerticalAlignment="Center"
                                                                d:Text="ComponentName"
                                                                Text="{Binding Name}" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>

                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>

                                <ScrollViewer.Style>
                                    <Style TargetType="ScrollViewer">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ScrollViewer}">
                                                    <Grid x:Name="Grid" Background="{TemplateBinding Background}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <ScrollContentPresenter
                                                            x:Name="PART_ScrollContentPresenter"
                                                            Grid.Column="0"
                                                            Margin="{TemplateBinding Padding}"
                                                            CanContentScroll="{TemplateBinding CanContentScroll}"
                                                            CanHorizontallyScroll="False"
                                                            CanVerticallyScroll="False"
                                                            Content="{TemplateBinding Content}"
                                                            ContentTemplate="{TemplateBinding ContentTemplate}" />
                                                        <ScrollBar
                                                            x:Name="PART_VerticalScrollBar"
                                                            Grid.Column="1"
                                                            Width="8"
                                                            AutomationProperties.AutomationId="VerticalScrollBar"
                                                            Cursor="Arrow"
                                                            Maximum="{TemplateBinding ScrollableHeight}"
                                                            Minimum="0"
                                                            ViewportSize="{TemplateBinding ViewportHeight}"
                                                            Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                                            Value="{Binding VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" />
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ScrollViewer.Style>
                            </ScrollViewer>

                        </Grid>
                    </Border>
                </Grid>

                <ToggleButton
                    x:Name="MenuButton"
                    Grid.Row="0"
                    Width="40"
                    Height="40"
                    Margin="5,5,0,5"
                    HorizontalAlignment="Left"
                    Command="{Binding OpenClosePaneCommand}">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Background" Value="#637FA0" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="#21303D"
                                            BorderThickness="1"
                                            CornerRadius="5">
                                            <svgc:SvgViewbox
                                                Width="26"
                                                Height="26"
                                                Source="/Img/TabComponents/MenuIcon.svg" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Background" Value="#fff" />
                                </Trigger>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#A6C8E5" />

                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>

                <Grid.Triggers>
                    <EventTrigger RoutedEvent="ToggleButton.Checked" SourceName="MenuButton">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetName="MenuGrid"
                                    Storyboard.TargetProperty="Width"
                                    To="50"
                                    Duration="0:0:0.3" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="ToggleButton.Unchecked" SourceName="MenuButton">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetName="MenuGrid"
                                    Storyboard.TargetProperty="Width"
                                    To="200"
                                    Duration="0:0:0.3" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Grid.Triggers>

            </Grid>

            <Border
                Background="AliceBlue"
                BorderBrush="Black"
                BorderThickness="0"
                DockPanel.Dock="Top">
                <ItemsControl
                    HorizontalContentAlignment="Stretch"
                    d:ItemsSource="{d:SampleData ItemCount=4}"
                    ItemsSource="{Binding TopNavigationBar}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding ShowCommand}" CommandParameter="{Binding}">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Border
                                            Padding="10,5"
                                            BorderBrush="Black"
                                            BorderThickness="0,0,0.5,0.5">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                d:Text="Nav"
                                                Text="{Binding Name}" />
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="White" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#AAD8C1" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>


                </ItemsControl>
            </Border>

            <Grid Background="#fff">
                <ContentControl Content="{Binding CurrentFrame.UserControl}" />
            </Grid>
        </DockPanel>

        <ContentControl Template="{StaticResource ContentControlLoad}" />
    </Grid>
</UserControl>
