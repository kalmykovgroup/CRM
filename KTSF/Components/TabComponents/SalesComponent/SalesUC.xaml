<UserControl
    d:DataContext="{d:DesignInstance Type=local:SalesComponent}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="KTSF.Components.TabComponents.SalesComponent.SalesUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KTSF.Components.TabComponents.SalesComponent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            FontSize="18"
            Margin="10"
            Text="Чеки" />

        <Border
            BorderBrush="#21303D"
            BorderThickness="1"
            CornerRadius="5"
            Grid.Row="2"
            Margin="5"
            Padding="2">

            <DataGrid
                AutoGenerateColumns="False"
                BorderThickness="0"
                IsReadOnly="True"
                ItemsSource="{Binding Receipts}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding CreatedDate}"
                        Header="Дата"
                        Width="100" />
                    <DataGridTextColumn Header="Номер" Width="100" />
                    <DataGridTextColumn
                        Binding="{Binding ReceiptPaymentInfo.TotalSum}"
                        Header="Сумма"
                        Width="150" />
                    <DataGridTextColumn Header="Возрат" Width="100" />
                    <DataGridTextColumn Header="Статут" Width="*" />
                    <DataGridTextColumn Header="№ фиксального чека" Width="150" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

    </Grid>
</UserControl>
