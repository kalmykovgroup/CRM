                                                Text="{Binding DataContext.Property.PhoneNumber, ElementName=UserControl}" />

                                            <TextBlock
                                                Grid.Row="1"
                                                HorizontalAlignment="Center"
                                                Text="{Binding Phone}" />

                                            <TextBlock
                                                Grid.Row="2"
                                                HorizontalAlignment="Center"
                                                FontWeight="DemiBold"
                                                Text="{Binding DataContext.Property.Email, ElementName=UserControl}" />
                                            <TextBlock
                                                Grid.Row="3"
                                                HorizontalAlignment="Center"
                                                Text="{Binding Email}" />
                                        </Grid>

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="3"
                                            HorizontalAlignment="Center"
