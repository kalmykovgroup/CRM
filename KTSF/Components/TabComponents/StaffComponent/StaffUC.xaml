                                            FontSize="15"
                                            FontWeight="DemiBold"
                                            Text="{Binding Appointment.Name}" />

                                        <Grid Grid.Row="0" Grid.Column="4">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition Height="2*" />
                                                <RowDefinition Height="2*" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <Button
                                                Grid.Row="1"
                                                Width="90"
                                                Height="20"
                                                Margin="0,0,15,0"
                                                Command="{Binding DataContext.EditEmployeeCommand, ElementName=UserControl}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding DataContext.Property.Edit, ElementName=UserControl}"
                                                Style="{StaticResource buttonStyle}" />

                                            <ToggleButton
                                                x:Name="userInfoToggleButton"
                                                Grid.Row="2"
                                                Width="90"
                                                Height="20"
