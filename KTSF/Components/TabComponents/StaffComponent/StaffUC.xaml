                        Grid.RowSpan="2"
                        Foreground="Black"
                        Template="{StaticResource ContentControlLoad}" />


                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>


                        <!--  USerControl SearchComponent  -->
                        <ContentControl
                            Grid.Column="0"
                            Margin="5,5"
                            Content="{Binding SearchComponent.Build}" />


                        <Button
                            Grid.Column="1"
                            Width="90"
                            Height="20"
                            Margin="0,0,20,0"
                            HorizontalAlignment="Right"
                            Command="{Binding DataContext.AddNewEmployeeCommand, ElementName=UserControl}"
                            Content="{Binding Property.Add}"
                            Style="{StaticResource addButtonStyle}" />
                    </Grid>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding Employees}">

                        <ItemsControl.ItemTemplate>
