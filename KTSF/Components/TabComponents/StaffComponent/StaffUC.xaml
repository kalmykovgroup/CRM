                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Image
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Width="70"
                                            Height="70"
                                            Margin="5"
                                            Source="Img\Foto.png"
                                            Stretch="Fill" />

                                        <Grid Grid.Row="0" Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <TextBlock
                                                Grid.Row="0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="15"
                                                Text="{Binding Surname}" />
                                            <TextBlock
                                                Grid.Row="1"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="15"
                                                Text="{Binding Name}" />
                                            <TextBlock
                                                Grid.Row="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="15"
                                                Text="{Binding Patronymic}" />
                                        </Grid>

                                        <Grid Grid.Row="0" Grid.Column="2">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <TextBlock
                                                Grid.Row="0"
                                                HorizontalAlignment="Center"
                                                FontWeight="DemiBold"
                                                Text="{Binding DataContext.Property.PhoneNumber, ElementName=UserControl}" />

                                            <TextBlock
                                                Grid.Row="1"
                                                HorizontalAlignment="Center"
                                                Text="{Binding Phone}" />

                                            <TextBlock
                                                Grid.Row="2"
                                                HorizontalAlignment="Center"
                                                FontWeight="DemiBold"
                                                Text="{Binding DataContext.Property.Email, ElementName=UserControl}" />
                                            <TextBlock
                                                Grid.Row="3"
                                                HorizontalAlignment="Center"
                                                Text="{Binding Email}" />
                                        </Grid>

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="3"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="15"
                                            FontWeight="DemiBold"
                                            Text="{Binding Appointment.Name}" />

                                        <Grid Grid.Row="0" Grid.Column="4">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition Height="2*" />
                                                <RowDefinition Height="2*" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <Button
                                                Grid.Row="1"
                                                Width="90"
                                                Height="20"
                                                Margin="0,0,15,0"
                                                Command="{Binding DataContext.EditEmployeeCommand, ElementName=UserControl}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding DataContext.Property.Edit, ElementName=UserControl}"
                                                Style="{StaticResource buttonStyle}" />

                                            <ToggleButton
                                                x:Name="userInfoToggleButton"
                                                Grid.Row="2"
                                                Width="90"
                                                Height="20"
                                                Margin="0,0,15,0"
                                                Content="{Binding DataContext.Property.MoreDetailed, ElementName=UserControl}"
                                                Style="{StaticResource toggleButtonStyle}" />
                                        </Grid>

                                        <!--  Нижняя часть карточки  -->
                                        <Grid
                                            x:Name="bottomPart"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Grid.ColumnSpan="2">

                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsChecked, ElementName=userInfoToggleButton}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Margin="0,5"
                                                FontWeight="DemiBold"
                                                Text="{Binding DataContext.Property.Address, ElementName=UserControl}"
                                                TextAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Text="{Binding Address}"
                                                TextAlignment="Center" />

                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Margin="0,5"
                                                FontWeight="DemiBold"
                                                Text="{Binding DataContext.Property.Passport, ElementName=UserControl}"
                                                TextAlignment="Center" />
                                            <UniformGrid
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Rows="1">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    HorizontalAlignment="Right"
                                                    Text="{Binding PassportSeries}" />
                                                <TextBlock HorizontalAlignment="Left" Text="{Binding PassportNumber}" />
                                            </UniformGrid>

                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                Margin="0,5"
                                                FontWeight="DemiBold"
                                                Text="{Binding DataContext.Property.INN, ElementName=UserControl}"
                                                TextAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                Text="{Binding Tin}"
                                                TextAlignment="Center" />

                                            <TextBlock
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                Margin="0,5"
                                                FontWeight="DemiBold"
                                                Text="{Binding DataContext.Property.SNILS, ElementName=UserControl}"
                                                TextAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                Text="{Binding Snils}"
                                                TextAlignment="Center" />

                                            <TextBlock
                                                Grid.Row="4"
                                                Grid.Column="0"
                                                Margin="0,5"
                                                FontWeight="DemiBold"
                                                Text="{Binding DataContext.Property.DateOfEmployment, ElementName=UserControl}"
                                                TextAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="4"
                                                Grid.Column="1"
                                                Text="{Binding ApplyingDate, StringFormat=dd-MM-yyyy}"
                                                TextAlignment="Center" />

                                            <TextBlock
                                                Grid.Row="5"
                                                Grid.Column="0"
                                                Margin="0,5"
                                                FontWeight="DemiBold"
                                                Text="{Binding DataContext.Property.DateOfEditing, ElementName=UserControl}"
                                                TextAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="5"
                                                Grid.Column="1"
                                                Text="{Binding Updated_At, StringFormat=dd-MM-yyyy}"
                                                TextAlignment="Center" />

                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </TabItem>

